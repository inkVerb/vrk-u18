#!/bin/sh
#inkVerbSurfer! verb.ink
set -e

# This the default locale to en_US

# How to use:
## sudo ./vrklocale


# Set user
if [ -z "$1" ]; then
VRK_USER=${SUDO_USER}
else
VRK_USER=$1
fi

# Check if installed
if [ ! -f /home/${SUDO_USER}/.vrk/configs/stationinfo ]; then
echo "Install Vrk first. See README.md"
exit 22
fi

# Echo in the Locale
echo "# File generated by vrklocale from inkVerb/vrk
LANG=\"en_US.UTF-8\"
LC_NUMERIC=\"en_US.UTF-8\"
LC_TIME=\"en_US.UTF-8\"
LC_MONETARY=\"en_US.UTF-8\"
LC_PAPER=\"en_US.UTF-8\"
LC_NAME=\"en_US.UTF-8\"
LC_ADDRESS=\"en_US.UTF-8\"
LC_TELEPHONE=\"en_US.UTF-8\"
LC_MEASUREMENT=\"en_US.UTF-8\"
LC_IDENTIFICATION=\"en_US.UTF-8\"" > /etc/default/locale

# Finish
echo "Default locale is set to en_US.UTF-8. You need to login again for changes to take effect."

